<plugin>

   <!-- Register the vmware extension. -->
   <extension point="org.eclipse.cmf.occi.core.occie">
      <occie scheme="http://occiware.org/occi/infrastructure/vmware#" file="model/vmware.occie"/>
   </extension>

   <!-- Define URI mapping. -->
   <extension point="org.eclipse.emf.ecore.uri_mapping">
      <mapping source="http://occiware.org/occi/infrastructure/vmware" target="platform:/plugin/org.eclipse.cmf.occi.multicloud.vmware/model/vmware.occie"/>
   </extension>

   <!-- Register the parser for .vmware files. -->
   <extension point="org.eclipse.emf.ecore.extension_parser">
      <parser type="vmware" class="org.eclipse.cmf.occi.core.util.OCCIResourceFactoryImpl"/>
   </extension>

   <!-- Popup menu for converting to an OCCI Configuration file. -->
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.cmf.occi.multicloud.vmware.contribution"
            nameFilter="*.vmware"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.eclipse.cmf.occi.core.occi-studio.ui.menu"
               label="OCCI Studio"
               path="additionsOCCIStudio">
            <separator name="group"/>
         </menu>
         <action
               class="org.eclipse.cmf.occi.core.ui.popup.actions.ExtensionConfiguration2OCCICAction"
               enablesFor="1"
               id="org.eclipse.cmf.occi.multicloud.vmware.ecore2occi"
               label="Convert to an OCCI Configuration File"
               menubarPath="org.eclipse.cmf.occi.core.occi-studio.ui.menu/group">
         </action>
      </objectContribution>
   </extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated vmware -->
      <package
            uri="http://occiware.org/occi/infrastructure/vmware/ecore"
            class="org.eclipse.cmf.occi.multicloud.vmware.VmwarePackage"/>
   </extension>

</plugin>
